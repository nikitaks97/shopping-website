@model IEnumerable<shopping_website.Models.Product>
@{
    ViewData["Title"] = "Products";
}
<h1>Products</h1>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Stock</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price.ToString("C")</td>
                <td>@product.Stock</td>
            </tr>
        }
    </tbody>
</table>
