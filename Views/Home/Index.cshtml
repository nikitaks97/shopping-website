@model IEnumerable<shopping_website.Models.Product>
@{
    ViewData["Title"] = "Home";
    Layout = "_Layout";
}

<div class="container">
    <h1>Welcome to Our Shopping Website</h1>
    <h2>Products</h2>
    <div class="product-list">
        @foreach (var product in Model)
        {
            <div class="product-item">
                <h3>@product.Name</h3>
                <p>@product.Description</p>
                <p class="price">Price: @product.Price.ToString("C")</p>
                <p>Stock: @product.Stock</p>
            </div>
        }
    </div>
</div>